<div class="text-center " style="height:initial;padding:20px 0px;opacity:0.8;margin:0px auto;width:80%;font-size: 18px;color: black;background-color: orange; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
  <% if current_user.answers.include? @answer %>
    <h1 class="responsive-survey_text"><%=@answer.text%></h1>
    <% if @answer.picture.url %>
      <%= image_tag @answer.picture.url, :class => "img-responsive responsive_upload_image"%>
    <% end %>
    <div style="margin:10px 0px 10px 0px;">
    <%= link_to "Edit", edit_answer_path(@answer), class: 'btn btn-warning responsive-button' %>
    <%= link_to "Back", question_path(@question), class: 'btn btn-warning responsive-button' %>
    <%= link_to "Delete", answer_path(@answer), method: :delete, data: {confirm: "You sure?"},class: 'btn btn-warning responsive-button' %>
    </div>
  <% else %>
    <p>You cannot view what you did not create</p>
  <% end %>
</div>



