<div class="text-center " style="height:initial;padding:20px 0px;opacity:0.8;margin:0px auto;width:80%;font-size: 18px;color: black;background-color: orange; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
  <% if current_user.answers.include? @answer %>
    <%= form_for @answer do |f| %>
        <div class="field">
          <%= f.text_field :text, placeholder:  @answer.text, class: 'responsive-input' %>
        </div>
        <%= link_to "Back", answer_path(@answer), class: 'btn btn-warning responsive-button' %>
        <%= f.submit "finish Editing", class: 'btn btn-warning responsive-button' %>
      <% end %>
  <% else %>
    <p>You cannot edit what you did not create</p>
  <% end %>
</div>
