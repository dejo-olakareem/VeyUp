<div class="text-center responsive-div">
  <% if current_user.answers.include? @answer %>
    <%= form_for @answer do |f| %>
        <div class="field">
          <%= f.text_field :text, placeholder:  @answer.text, class: 'responsive-input',:required => true %>
        <div class="row" style="margin: 10px 0px 10px 40px">
          <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6 filter-image" id="contrast"  style="margin:5px 5px; background-image: url(<%=@answer.picture.url%>);background-size:cover;background-position: center;display: inline;">
          </div>

           <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6 filter-image" id="grayscale" style="margin:5px 5px;background-image: url(<%=@answer.picture.url%>);background-size:cover;background-position: center;display: inline;">
          </div>

           <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6 filter-image" id="saturate" style="margin:5px 5px;background-image: url(<%=@answer.picture.url%>);background-size:cover;background-position: center;display: inline;">
          </div>

           <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6 filter-image" id="sephia" style="margin:5px 5px;background-image: url(<%=@answer.picture.url%>);background-size:cover;background-position: center;display: inline;">
          </div>

           <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6 filter-image" id="hue-rotate" style="margin:5px 5px;background-image: url(<%=@answer.picture.url%>);background-size:cover;background-position: center;display: inline;">
        </div>
        </div>

        <%= f.file_field :picture , class: 'responsive-survey_text responsive_upload_image'%>
        </div>
        <%= link_to "Back", answer_path(@answer), class: 'btn btn-warning responsive-button' %>
        <%= f.submit "finish Editing", class: 'btn btn-warning responsive-button' %>
      <% end %>
  <% else %>
    <p>You cannot edit what you did not create</p>
  <% end %>
</div>
