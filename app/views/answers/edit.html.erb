<% if current_user.answers.include? @answer %>
  <%= form_for @answer do |f| %>
      <div class="field">
        <%= f.text_field :text, placeholder:  @answer.text %>
      </div>
      <%= link_to "Back", answer_path(@answer) %>
      <div class="actions"><%= f.submit "finish Editing" %></div>
    <% end %>
<% else %>
  <p>You cannot edit what you did not create</p>
<% end %>
