                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<%= f.hidden_field :user_id, :value => @user.id %>
<%= f.hidden_field :business_id, :value => @business.id %>
