<div class="text-center " style="height:initial;padding:100px 0px;opacity:0.8;margin:0px auto;width:80%;font-size: 18px;color: black;background-color: orange; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
  <% if current_user.surveys.include? @survey %>
    <h3 class="responsive-survey_text"><%= @survey.name%></h3>
    <%= link_to "Edit", edit_survey_path(@survey), class: ' btn btn-warning responsive-button' %>
    <%= link_to "Back", user_path(@user), class: ' btn btn-warning responsive-button' %>
    <%= link_to "Delete", survey_path(@survey), method: :delete, data: {confirm: "You sure?"}, class: ' btn btn-warning responsive-button' %><br>
    <%= link_to "Create Question for Your Survey", new_survey_question_path(@survey, @question), :remote => true, class: 'responsive-button responsive-survey_text' %>
    <div id="question_attach">

    </div>
    <% if @survey.questions.empty? %>
      <h3>Start Your survey today</h3>
    <% else %>
      <h3 class="responsive-survey_text">This are your questions to this survey</h3>
      <% @survey.questions.each do |question| %>
      <%= link_to question.text, question_path(question) %><br>
    <% end %>
    <% end %>
  <% else %>
    <p>You did not create this survey</p>
  <%end%>
</div>
