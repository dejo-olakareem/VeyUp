<% @question.each do |question| %>
<div>
<div class="text-center responsive-margin" style="padding:0.3px 50px;opacity:0.8;font-size: 18px;color: black; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
 <h1 class="responsive-survey_text" ><a href="/questions/<%= question.id%>/edit" style="color:black; text-decoration:none;" ><%=question.text%></a></h1>
</div>
<div class="container">
    <div class="responsive-row">
        <% question.answers.each do |answer| %>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6" style="height:100%;padding:5px 5px;">
                <form class ="like" action="/answers/<%=answer.id%>/votes" method= "POST" style="width:100%;height:70%;background-repeat:no-repeat;background-size:cover;background-image:url(<%= answer.picture_url %>); background-position: center;">
                </form>
                <div class="container" style="text-align: center; width:100%;height:30%;background-color:white;opacity: 0.8; border-color:#f0ad4e;border-style: groove;">
                    <p class="responsive-survey_text" style="margin-bottom: 0px;"> <a href="/answers/<%=answer.id%>/edit" style="color:black; text-decoration:none;"><%= answer.text %></a></p>
                    <span class="fa fa-heart responsive-heart"></span><br>
                    <span id="<%=answer.id  %>" class="vote_count"><%= answer.votes.count %></span>
                </div>
            </div>
        <% end %>
    </div>
</div>
</div>
<% end %>

