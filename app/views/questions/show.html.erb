<div class="text-center " style="padding:0.3px 0px;opacity:0.8;margin:-19px 0px 5px 0px;font-size: 18px;color: black;background-color: orange; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
  <% if current_user.questions.include? @question %>
    <h1 class="responsive-survey_text" ><a href="/questions/<%= @question.id%>/edit" style="color:black; text-decoration:none;" ><%=@question.text%></a></h1>
      <% if @question.avatar? %>
        <%= image_tag @question.avatar.url(:large), :class => "img-responsive responsive_upload_image" %>
      <% end %>
    <div style="margin:10px 0px 10px 0px;">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-warning responsive-button' %>
    <%= link_to "Back", survey_path(@survey), class: 'btn btn-warning responsive-button' %>
    <%= link_to "Delete", question_path(@question), method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-warning responsive-button' %>
    <% if @question.answers.length <= 3 %>
      <%= link_to "Create Answer", new_question_answer_path(@question, @answer) , remote: true, class: 'btn btn-warning responsive-button'%>
      <% end %>
    </div>
    <div id="answer_attach"></div>
  <% else %>
    <p>You cannot see what you did not create</p>
  <% end %>
</div>

<div class="container">
    <div class="responsive-row">
        <% @question.answers.each do |answer| %>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 " style="height:100%;padding:5px 5px;">
                <div style="width:100%;height:70%;background-repeat:no-repeat;background-size:cover;background-image:url(<%= answer.picture_url %>);background-position: center;">
                  <%#= image_tag answer.picture.url, :class => "img-responsive responsive_upload_image" %>
                </div>
                <div class="container"  style="text-align: center; width:100%;height:30%;background-color:white;opacity: 0.8; border-color:#f0ad4e;border-style: groove;">
                    <p class="responsive-survey_text" style="padding-top: 0px;"> <a href="/answers/<%=answer.id%>/edit" style="color:black; text-decoration:none;"> <%= answer.text %></a></p>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="container" style="padding:20px 15px;">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
            <div>
                <button class="btn btn-default btn-lg" type="button" style="font-family:&#39;Archivo Black&#39;, sans-serif;margin:auto;background-color:#f0ad4e;">&lt;&lt; Previous </button>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
            <div>
                <button class="btn btn-default btn-lg" type="button" style="font-family:&#39;Archivo Black&#39;, sans-serif;background-color:#f0ad4e;">Next &gt;&gt;</button>
            </div>
        </div>
    </div>
</div>

