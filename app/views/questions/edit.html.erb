<div class="text-center " style="height:initial;padding:100px 0px;opacity:0.8;margin:0px auto;width:80%;font-size: 18px;color: black;background-color: orange; box-shadow: 1px 1px 5px rgba(0,0,0,1)">
  <% if current_user.questions.include? @question %>
    <%= form_for @question  do |f| %>
      <div style="margin:0px 0px 10px 0px;">
        <%= f.text_field :text, placeholder: @question.text ,class: 'responsive-input'%>
      </div>
      <%= link_to "Back", question_path(@question), class: 'btn btn-warning responsive-button' %>
      <%= f.submit "Finish editing", class: 'btn btn-warning responsive-button' %>
    <% end %>
  <% else %>
    <p>You cannot edit what you did not create</p>
  <% end %>
</div>
