<div class="text-center" style="height:initial;padding:40px 0px;opacity:0.6;background-color:transparent;;margin:0px auto;width:80%; >
<%= form_for @user do |f| %>
                <div style="padding:40px 0px 10px 0px;">
                    <%= f.text_field :email, placeholder: "Email", class: 'input-lg' %>
                </div>
                <div style="padding:0px 0px 10px 0px;">
                    <%= f.password_field :password, placeholder: "Password", class: 'input-lg' %>
                </div>
                <div style="padding:0px 0px 10px 0px;">
                    <%= f.text_field :password_confirmation, placeholder: "Password Confirmation", class: 'input-lg' %>
                </div>
                <div style="padding:0px 0px 10px 0px;">
                    <p>Forgot Password</p>
                    <%= f.submit "Sign Up", class: 'btn btn-info btn-lg' %>
                </div>
                <div>
                    <button class="btn btn-default btn-lg" type="button">Sign In with Google</button>
                </div>
<% end %>
            </div>
